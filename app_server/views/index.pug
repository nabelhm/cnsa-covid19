extends layout

include _includes/sharedHTMLfunctions

block content
    .container: .jumbotron
        h1 Datos mundiales a fecha #{world_summary.date.value}
        br
        table.table.table-dark
            thead
                tr
                    th.text-warning Confirmed
                    th.text-danger Deaths
                    th.text-success Recovered
            tbody
                tr
                    td.text-warning #{world_summary.confirmed}
                    td.text-danger #{world_summary.deaths}
                    td.text-success #{world_summary.recovered}
        br
        .container
            .row
                .col.col-md-6.col-sm-6.col-xs-12
                    h2 TOP 10 paises infectados
                    table.table.table-dark
                        tr.thead-dark
                            th(scope="col") Country
                            th.text-warning(scope="col") Confirmed
                            th.text-danger(scope="col") Deaths
                        for data in data_confirmed
                            tr
                                td #{data.country_region}
                                td.text-warning #{data.confirmed}
                                td.text-danger #{data.deaths}
                .col.col-md-6.col-sm-6.col-xs-12
                    h2 TOP 10 paises muertes
                    table.table.table-dark
                        tr.thead-dark
                            th(scope="col") Country
                            th.text-danger(scope="col") Deaths
                            th.text-warning(scope="col") Confirmed
                        - var n = 0;
                        for data in data_map
                            if n < 10
                                - n++;
                                tr
                                    td #{data.country_region}
                                    td.text-danger #{data.deaths}
                                    td.text-warning #{data.confirmed}
